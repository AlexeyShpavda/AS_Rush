<div class="header_articles">
  <h1>Articles</h1>

  <%= link_to 'New article', new_article_path, class: 'btn btn-outline-dark' %>
</div>

<div class="row">
  <div class = "col-md-10">
    <%= render @articles %>
    <%= will_paginate @articles, renderer: 'BootstrapPaginationHelper::LinkRenderer' %>
  </div>
  <div class="col-md-2">
    <h2>Tags</h2>
    <% tag_cloud(Tag.counts, %w{tag1 tag2 tag3 tag4 tag5}) do |tag, css_class| %>
      <div><%= link_to tag.name, tag_path(tag.name), class: css_class %></div>
    <% end %>
  </div>
</div>